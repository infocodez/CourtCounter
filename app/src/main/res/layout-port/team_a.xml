<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/team_vertical"
        android:layout_marginTop="@dimen/team_vertical"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="@string/team_a"
        android:textColor="@color/gray"
        android:textSize="@dimen/team_textSize" />

    <TextView
        android:id="@+id/team_a_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/score_marginBottom"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/score"
        android:textColor="@color/black"
        android:textSize="@dimen/score_textSize" />

    <Button
        android:id="@+id/button_plus_3_points_team_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/button_horizontal"
        android:layout_marginRight="@dimen/button_horizontal"
        android:onClick="plusThreePoints"
        android:text="@string/plus_3_points" />

    <Button
        android:id="@+id/button_plus_2_points_team_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button2_vertical"
        android:layout_marginLeft="@dimen/button_horizontal"
        android:layout_marginRight="@dimen/button_horizontal"
        android:layout_marginTop="@dimen/button2_vertical"
        android:onClick="plusTwoPoints"
        android:text="@string/plus_2_points" />

    <Button
        android:id="@+id/button_free_throw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/button_horizontal"
        android:layout_marginRight="@dimen/button_horizontal"
        android:onClick="freeThrow"
        android:text="@string/free_throw" />

</LinearLayout>